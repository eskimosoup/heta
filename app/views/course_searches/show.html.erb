<% @title = "Search Results #{@search.keywords}" %>
<div class="title-spacer"></div>

<div class="title-area">
  <div class="row">
    <div class="large-12 columns focus-title-area">
      <div class="heading-container">
        <h1>Search Results</h1>
      </div>
    </div>
  </div>
</div>

<%= render "shared/course_search" %>

<div id="course-listings">
  <div class="row">
  <% if @search.courses.blank? %>
    Sorry no courses found, try broadening your search.
  <% else %>
    <% @search.courses.each do |results| %>
      <%= render results %>
    <% end %>
  <% end %>
  </div>
</div>