<div class="title-spacer"></div>

<div class="title-area">
  <div class="row">
    <div class="large-12 columns focus-title-area">
      <div class="heading-container">
        <h1><%= @apprentice_pathway.title %></h1>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="large-8 columns top-margin page-content"><%= raw @apprentice_pathway.content %></div>

  <div class="large-4 columns top-margin">
    <% unless @apprentice_pathway.apprentices.blank? %>
      <div class="sidebar apprentice-pathway-apprentices">
        <h2>Apprentices</h2>

        <div class="row">
        <% @apprentice_pathway.apprentices.each do |apprentice| %>
          <div class="large-6 columns">
            <%= link_to image_tag(apprentice.image.home, :alt => apprentice.name, :class => "image-border"), apprentice %>
            <span class="apprentice-name-tag"><%= apprentice.name %></span>
          </div>

        <% end %>
        </div>
      </div>
    <% end %>

    <%= render "shared/sidebar" if @current_branch %>

    <% unless @latest_news.blank? %>
      <div class="sidebar">
        <h2>Latest News</h2>
        <ul>
          <% @latest_news.each do |latest_news| %>
            <li>
              <%= link_to latest_news.headline, latest_news %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>