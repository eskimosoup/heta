<%= form_for([:admin, @course]) do |f| %>

  <%= f.error_messages %>

  <%= field_set_tag 'Basic' do -%>
    
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label "Type" %><br />
      <%= f.select :course_type, options_for_select([["Bookable", "Bookable"], ["On Demand", "On Demand"]], :selected => f.object.course_type) %>
    </div>

    <div class="field">
      <%= f.label "Category" %><br />
      <%= f.select :course_category_id, CourseCategory.all.map{|x| [x.title, x.id]} %>
    </div>
    
    <div class="field">
      <%= f.label :summary %><br />
      <%= f.text_area :summary %>
    </div>
    
    <div class="field">
      <%= f.label :content %><br />
      <%= f.text_area :content, :class => "tinymce" %>
    </div>
    
    <div class="field">
      <%= f.label :individual_price %><br />
      <%= f.text_field :individual_price %>
    </div>
    
    <div class="field">
      <%= f.label :group_price %><br />
      <%= f.text_field :group_price %>
    </div>
    
    <div class="field">
      <%= f.label :min_place %><br />
      <%= f.number_field :min_place %>
    </div>
    
    <div class="field">
      <%= f.label :max_place %><br />
      <%= f.number_field :max_place %>
    </div>
    
    <div class="field">
      <%= f.label :min_group_number %><br />
      <%= f.number_field :min_group_number %>
    </div>
    
    <div class="field">
      <%= f.label :max_group_number %><br />
      <%= f.number_field :max_group_number %>
    </div>
    
    <div class="field">
      <%= f.label :length %><br />
      <%= f.text_field :length %>
    </div>
    
    <div class="field">
      <%= f.label :bespoke %><br />
      <%= f.check_box :bespoke %>
    </div>
    
    <div class="field">
      <%= f.label :display %><br />
      <%= f.check_box :display %>
    </div>
    
  <% end -%>
  
  <div class="actions">
    <%= f.submit %>
  </div>
  
<% end %>					
