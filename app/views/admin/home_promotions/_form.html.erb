<%= form_for([:admin, @home_promotion]) do |f| %>

  <%= f.error_messages %>

  <%= field_set_tag 'Basic' do -%>

    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <%= f.label :summary %><br />
      <%= f.text_area :summary, class: 'tinymce' %>
    </div>

    <div class="field">
      <%= f.label :link %><br />
      <%= f.text_field :link %>
    </div>

    <div class="field">
      <%= f.label :display %><br />
      <%= f.check_box :display, checked: true %>
    </div>

  <% end -%>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
