<% title Gallery.model_name.human.pluralize %>

<div class="admin_functions">
  <%= link_to "New Image", new_admin_gallery_path %>
</div>

<%= informant_table @galleries, {
      :headings => [ '', 'Image', 'Image Alt', 'Caption', 'Display', '', '' ],
      :body => [ it_sort,
                 it_edit_images(:image),
                 :image_alt,
                 :caption,
                 it_ajax_toggle(:display),
                 it_edit,
                 it_destroy ]
    } %>
