<% title Banner.model_name.human.pluralize %>

<div class="admin_functions">
  <%= link_to "New #{ Banner.model_name.human }", new_admin_banner_path %>
</div>

<%= informant_table @banners, {
      :headings => [ '', 'Caption', 'Link', 'Image', 'Display', '', '' ],
      :body => [ it_sort,
                 :caption,
                 :link,
                 it_edit_images(:image),
                 it_ajax_toggle(:display),
                 it_edit,
                 it_destroy ]
    } %>
