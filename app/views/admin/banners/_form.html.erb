<%= form_for([:admin, @banner]) do |f| %>

  <%= f.error_messages %>

  <%= field_set_tag 'Basic' do -%>
    
    <div class="field">
      <%= f.label :caption %><br />
      <%= f.text_field :caption %>
    </div>

    <div class="field">
      <%= f.label :link_text %><br />
      <%= f.text_field :link_text %>
    </div>
    
    <div class="field">
      <%= f.label :link %><br />
      <%= f.text_field :link %>
    </div>
    
    <div class="field">
      <%= f.label :image %><br />
      <%= f.image_field :image %>
    </div>
    
  <% end -%>
  
  <div class="actions">
    <%= f.submit %>
  </div>
  
<% end %>					
