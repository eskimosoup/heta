<div class="title-spacer"></div>

<div class="title-area">
  <div class="row">
    <div class="large-12 columns focus-title-area">
      <div class="heading-container">
        <h1><%= @apprentice.name %><% unless @apprentice.company.blank? %> - <%= @apprentice.company.name %><% end %></h1>
      </div>
    </div>
  </div>
</div>



<div id="apprentice-focus" class="row">
  <div class="large-6 columns top-margin">
    <% unless @apprentice.image.blank? %>
      <%= image_tag @apprentice.image.show, :class => "image-border" %>
    <% end %>
  </div>

  <div class="large-6 columns top-margin apprentice-info">
    <%= raw @apprentice.content %>
  </div>
</div>

