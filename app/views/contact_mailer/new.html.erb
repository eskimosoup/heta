<html lang="en">
  <body>
    <h1><%= SITE_SETTINGS['Name'] %> Contact Form Completed</h1>
    
    <p>
      <strong>Name:</strong>
      <br />
      <%= @contact.firstname %> <%= @contact.lastname %>
    </p>
    
    <p>
      <strong>Email:</strong>
      <br />
      <%= mail_to(@contact.email) %>
    </p>
    
    <p>
      <strong>Subject:</strong>
      <br />
      <%= @contact.subject %>
    </p>    
    
    <p>
      <strong>Site:</strong>
      <br />
      <%= @contact.area %>
    </p>
    
    <p>
      <strong>Message:</strong>
      <br />
      <%= @contact.message %>
    </p>
    
  </body>
</html>